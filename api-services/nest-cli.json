{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/master/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/master/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/master",
  "projects": {
    "master": {
      "type": "application",
      "root": "apps/master",
      "entryFile": "main",
      "sourceRoot": "apps/master/src",
      "compilerOptions": {
        "tsConfigPath": "apps/master/tsconfig.app.json"
      }
    },
    "reader": {
      "type": "application",
      "root": "apps/reader",
      "entryFile": "main",
      "sourceRoot": "apps/reader/src",
      "compilerOptions": {
        "tsConfigPath": "apps/reader/tsconfig.app.json"
      }
    }
  }
}